<resources>
    <style name="Title">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="Subtitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="Button">
        <item name="android:backgroundTint">@color/button</item>
    </style>

    <style name="CircularButton">
        <item name="android:background">@drawable/circular_button_background</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/rounded_edit_text_background</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHint">@color/text</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:paddingVertical">4dp</item>
    </style>
</resources>
